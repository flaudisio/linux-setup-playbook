root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = 100
trim_trailing_whitespace = false

[{*.go,go.mod}{,.tpl,.tftpl,.erb,.j2,.jinja}]
indent_size = 4
indent_style = tab

[*.{py,sh}{,.tpl,.tftpl,.erb,.j2,.jinja}]
indent_size = 4

[Makefile]
indent_size = 4
indent_style = tab

# Note: shell configuration is used by shfmt
# TODO: add pre-commit hook for shfmt
[*.sh]
indent_size = 4
function_next_line = true
keep_padding = true
space_redirects = true
switch_case_indent = true
